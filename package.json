{
  "name": "gitlab-webhook-handler",
  "version": "1.0.0",
  "description": "A Node.js service to receive and process GitLab webhooks",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "node build.js",
    "build:exe": "npm run build && cd dist && pkg package.json --targets node18-linux-x64 --output ../dist/gitlab-webhook-handler --no-warnings",
    "build:extension": "node build-extension.js",
    "package:extension": "node package-extension-crx.js",
    "test:webhook": "node test/test-webhook.js"
  },
  "keywords": [
    "gitlab",
    "webhook",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1",
    "esbuild": "^0.19.8",
    "archiver": "^7.0.1"
  },
  "pkg": {
    "scripts": [
      "dist/bundle.js"
    ],
    "assets": [
      "env.example"
    ],
    "outputPath": "dist"
  }
}
